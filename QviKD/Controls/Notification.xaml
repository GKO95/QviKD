<Popup x:Class="QviKD.Controls.Notification"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:local="clr-namespace:QviKD.Controls"
       mc:Ignorable="d" Width="240" Height="60" 
       Placement="Top" AllowsTransparency="True">
    <Grid x:Name="NotificationArea">
        <Border x:Name="NotificationBorder"
                Margin="2" BorderBrush="LightGray" BorderThickness="1">
            <TextBlock x:Name="NotificationContent"
                       TextWrapping="Wrap" Margin="12,8"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       FontFamily="pack://application:,,,/Fonts/#JetBrains Mono"
                       FontWeight="Bold" FontSize="12" />
        </Border>
    </Grid>
</Popup>
