<UserControl x:Class="QviKD.MainDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QviKD"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="4,4,4,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*" MaxHeight="144" MinHeight="40" />
        </Grid.RowDefinitions>

        <StackPanel x:Name="MainDisplayInfo" Grid.Row="0" Orientation="Vertical" Background="White" Margin="4,4,4,4">
            <TextBlock x:Name="MainDisplayInfo_Product" HorizontalAlignment="Center">(unknown)</TextBlock>
        </StackPanel>
        <StackPanel x:Name="MainDisplayList" Grid.Row="1" Orientation="Horizontal" Background="Black" Margin="4,4,4,4" />
    </Grid>
</UserControl>
