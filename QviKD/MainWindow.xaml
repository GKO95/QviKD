<Window x:Class="QviKD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="480" Width="800" MinWidth="448" MinHeight="400"
        Title="QviKD" Loaded="Window_Loaded">
    
    <Window.Resources>

    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <Grid Name="MainWindowHeader" DockPanel.Dock="Top" Background="#FF202020" Height="48" />
        <StatusBar Name="MainWindowFooter" DockPanel.Dock="Bottom" Height="24" Background="{Binding Background, ElementName=MainWindowHeader}" />
        <Frame Name="MainWindowContent" />
    </DockPanel>
    
</Window>