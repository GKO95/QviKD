<local:AppWindow x:Class="QviKD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QviKD"
        mc:Ignorable="d"
        Height="600" Width="800" MinHeight="464" MinWidth="600"
        Title="QviKD">

    <DockPanel Name="MainWindowDock" LastChildFill="True">
        <Grid Name="MainWindowHeader" DockPanel.Dock="Top" Background="#FF202020" Height="76" />
        <StatusBar Name="MainWindowFooter" DockPanel.Dock="Bottom" Height="24" Background="{Binding Background, ElementName=MainWindowHeader}" />
        <Frame Name="MainWindowContent" Source="Pages/MainPage.xaml" NavigationUIVisibility="Hidden" LoadCompleted="MainWindowContent_LoadCompleted" />
    </DockPanel>
    
</local:AppWindow>