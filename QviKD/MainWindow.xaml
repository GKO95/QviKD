<Window x:Class="QviKD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="QviKD" Height="480" Width="800" MinWidth="448" MinHeight="400" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top" Background="#FF202020" Height="48"></Grid>
        <StatusBar DockPanel.Dock="Bottom" Height="24" Background="#FF202020"></StatusBar>
        <Grid Background="#DD303030">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MaxWidth="100" MinWidth="64"/>
                <ColumnDefinition Width="18*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="MainNavigation" Grid.Column="0" Background="#FF303030" BorderThickness="0"/>
            <ContentControl x:Name="MainContent" Grid.Column="1"/>
        </Grid>
    </DockPanel>
</Window>