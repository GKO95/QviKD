<Page x:Class="QviKD.WidgetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QviKD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToolkitPage">

    <ScrollViewer Name="ToolkitPageScroll" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel Name="ToolkitPageContent" MaxWidth="1200" Margin="32">

            <StackPanel Name="ToolkitPageHeader" HorizontalAlignment="Left" Orientation="Horizontal">
                <Button Name="ToolkitPageHeaderBack" Content="◀" Click="ToolkitPageHeaderBack_Click"/>
                <Label Name="ToolkitPageHeaderTitle" FontWeight="Bold" Content="Modules" />
            </StackPanel>

            <Grid Name="ToolkitPageList">

            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</Page>
