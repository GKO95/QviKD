<Page x:Class="QviKD.MonitorsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QviKD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MonitorsPage" Loaded="Page_Loaded">

    <Page.Resources>
        <ControlTemplate x:Key="tplMonitorButton" TargetType="Button">
            <Grid>
                <Button HorizontalAlignment="Stretch" Height="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}}" VerticalAlignment="Stretch" Margin="48" />
            </Grid>
        </ControlTemplate>
    </Page.Resources>


    <Grid Background="gray">
        <Grid Name="MonitorsPageContent" MaxWidth="1200" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Page>
