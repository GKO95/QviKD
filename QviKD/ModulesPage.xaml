<Page x:Class="QviKD.ModulesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QviKD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModulesPage">

    <ScrollViewer Name="ModulesPageScroll" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel Name="ModulesPageContent" MaxWidth="1200" Margin="32">
            
            <StackPanel Name="ModulesPageHeader" HorizontalAlignment="Left" Orientation="Horizontal">
                <Button Name="ModulesPageHeaderBack" Content="◀" Click="ModulesPageHeaderBack_Click"/>
                <Label Name="ModulesPageHeaderTitle" FontWeight="Bold" Content="Modules" />
            </StackPanel>
            
            <Grid Name="ModulesPageList">

            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</Page>
